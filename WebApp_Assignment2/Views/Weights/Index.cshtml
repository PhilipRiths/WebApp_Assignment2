@model GymBuddyWebApp.Domain.Weights
<form asp-controller="Weights" asp-action="Edit" method="post">
    Edit by Id:<br />
    <div>
        <input type="text" asp-for="Id"></>
        <span asp-validation-for="Id" class="text-danger"></span><br />
    </div>
    <button type="Submit"> Edit</button>
</form>
<form asp-controller="Weights" asp-action="Delete" method="post">
    Delete by Id:<br />
    <div>
        <input type="text" asp-for="Id"></>
        <span asp-validation-for="Id" class="text-danger"></span><br />
    </div>
    <button type="Submit"> Delete</button>
</form>
<form asp-controller="Weights" asp-action="Create" method="post">
    <button type="Submit"> Create</button>
</form>
<form asp-controller="Weights" asp-action="Details" method="post">
    Get details by Id:<br />
    <div>
        <input type="text" asp-for="Id"></>
        <span asp-validation-for="Id" class="text-danger"></span><br />
    </div>

    <button type="Submit"> Details</button>
</form>