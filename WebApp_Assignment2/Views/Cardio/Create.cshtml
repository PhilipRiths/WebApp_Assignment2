@model GymBuddyWebApp.Domain.Cardio

<form asp-controller="Cardio" asp-action="SaveCardio" method="post">
    
    <b>Cardio type:</b> <br>
    
        <select asp-for="CardioType" >
            <option value="">All</option>
            <option value="Jogging">Jogging</option>
            <option value="Crosstrainer">Crosstrainer</option>
            <option value="Bicycling">Bicycling</option>
            <option value="Other">Other</option>
        </select><br/>
  
    <b>Distance</b>:<br>
    <div>
        <input type="text" asp-for="Distance"></>
        <span asp-validation-for="Distance" class="text-danger"></span><br />
    </div>
    <b>Time(Hours/Minutes):</b><br>
    <div>
        <input type="Text" asp-for="Time"></>
        <span asp-validation-for="Time" class="text-danger"></span><br />
    </div>
    <b>Date:</b><br />
    <div>
        <input type="date" asp-for="Date"></>
        <span asp-validation-for="Date" class="text-danger"></span><br />
    </div>
   <b>PersonId:</b> <br />
    <div>
        <input type="text" asp-for="PersonId"></>
        <span asp-validation-for="PersonId" class="text-danger"></span><br />
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit"> Create</button>

</form>