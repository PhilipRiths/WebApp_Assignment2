@using GymBuddyWebApp.Domain
@model GymBuddyWebApp.Domain.Person   
@{
    ViewData["Title"] = "Index";
}


<form asp-controller="People" asp-action="Details" method="post">
    <p><span>Get details by Id:</span> </p>
    <div>
        <input type="text" asp-for="Id"></>
        <span asp-validation-for="Id" class="text-danger"></span><br />
    </div>

    <button type="Submit"> Details</button>
</form>


<form asp-controller="People" asp-action="Edit" method="post">
    <p><span>Id:</span></p>
    <div>
        <input type="text" asp-for="Id"></>
        <span asp-validation-for="Id" class="text-danger"></span><br />
    </div>
    <button type="Submit"> Edit</button>
</form>
<form asp-controller="People" asp-action="Delete" method="post">
    <p><span>Delete by Id:</span></p>
    <div>
        <input type="text" asp-for="Id"></>
        <span asp-validation-for="Id" class="text-danger"></span><br />
    </div>
    <button type="Submit"> Delete</button>

</form>
<form asp-controller="People" asp-action="Create" method="post">
    <button type="Submit"> Create</button>
</form>
